                <div class="col-md-7">
                    <div class="card mb-2">
                        <div class="card-body @((Model.Status == Status.Active) ? "bg-primary" : "")">
                            <h2 class="text-decoration-underline" style="text-align:center; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> @Model.SubjectText</h2>
                            <hr />
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Code:</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.Code
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.Description
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Regsitered Topics:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @if (Model.Status == Status.Active)
                                    {
                                        <a style="color:white" asp-controller="Topic" asp-action="TopicsList" asp-route-id="@Model.Id">
                                          <p class="text-decoration-underline">@Model.Topics.Count Topics</p>
                                        </a>
                                    }
                                    else
                                    {
                                        <p>@Model.Topics.Count Topics</p>
                                    }
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Status:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @Model.Status
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Created By:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @Model.CreatedBy on dated: @Model.CreatedOn
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Update by:</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.UpdatedBy &ensp; on dated: @Model.UpdatedOn
