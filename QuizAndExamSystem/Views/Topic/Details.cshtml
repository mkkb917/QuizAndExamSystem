                </div>
                <div class="col-md-7">
                    <div class="card mb-2">
                        <div class="card-body @((Model.Status == Status.Active) ? "bg-primary" : "")">
                            <h2 class="text-decoration-underline" style="text-align:center; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> @Model.TopicText</h2>
                            <hr />
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Code:</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.Code
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Description</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.Description
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Regsitered Questions:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @if (Model.Status == Status.Active)
                                    {
                                        <a style="color:white" asp-controller="Question" asp-action="Index" asp-route-id="@Model.Id">
                                            <p class="text-decoration-underline">@Model.Questions.Count Questions</p>
                                        </a>
                                    }
                                    else
                                    {
                                        <p>@Model.Questions.Count Questions</p>
                                    }
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Status:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @Model.Status
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Created By:</h6>
                                </div>
                                <div class="col-sm-8 ">
                                    @Model.CreatedBy on dated: @Model.CreatedOn
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <h6 class="mb-0">Update by:</h6>
                                </div>
                                <div class="col-sm-8">
                                    @Model.UpdatedBy &ensp; on dated: @Model.UpdatedOn
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-12">
                    <div class="card mb-2">
                        <label class="control-label text-center">Pairing Scheme for <strong>@Model.TopicText.</strong></label>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th><label asp-for="MCQCount" class="control-label"></label></th>
                                    <th><label asp-for="MCQMarks" class="control-label"></label></th>
                                    <th><label asp-for="SEQCount" class="control-label"></label></th>
                                    <th><label asp-for="SEQMarks" class="control-label"></label></th>
                                    <th><label asp-for="LongQCount" class="control-label"></label></th>
                                    <th><label asp-for="LongQMarks" class="control-label"></label></th>
                                    <th><label class="control-label">Total</label></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>1</th>
                                    <th>
                                        <input asp-for="MCQCount" id="mcqCount" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input asp-for="MCQMarks" id="mcqMarks" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input asp-for="SEQCount" id="seqCount" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input asp-for="SEQMarks" id="seqMarks" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input asp-for="LongQCount" id="longCount" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input asp-for="LongQMarks" id="longMarks" type="number" class="form-control" readonly />
                                    </th>
                                    <th>
                                        <input class="form-control" id="TotalMarks" type="number" readonly />
                                    </th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div>
                <a class="btn btn-primary float-right" asp-action="Edit" asp-route-id="@Model.Id"><i class="fas fa-pencil-square"></i> Edit</a>
                <a asp-action="TopicsList" asp-route-id="@Model.SubjectId" class="btn btn-secondary"> <i class="fa fa-arrow-left"></i> Back</a>
            </div>
