@model QuestionMetaVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Add new Info about this question</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <table id="tblData" class="table table-bordered table-hover">
                    <form asp-action="CreateQuestionMeta" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <button type="submit" value="Create" class="btn btn-success float-right"><i class="fas fa-floppy-disk"></i> Create </button>
                            <a asp-controller="Question" asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-secondary"> <i class="fas fa-arrow-back"></i> Cancel</a>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="ExamName" class="control-label"></label>
                            <select asp-for="ExamName" class="form-control" asp-items="Html.GetEnumSelectList<Exam>()"></select>
                            <span asp-validation-for="ExamName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExamYear" class="control-label"></label>
                            <input asp-for="ExamYear" class="form-control" placeholder="2020" type="date"/>
                            <span asp-validation-for="ExamYear" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BoardName" class="control-label"></label>
                            <select asp-for="BoardName" class="form-control" asp-items="Html.GetEnumSelectList<BoardNames>()"></select>
                            <span asp-validation-for="BoardName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Session" class="control-label"></label>
                            <select asp-for="Session" class="form-control" asp-items="Html.GetEnumSelectList<Session>()"></select>
                            <span asp-validation-for="Session" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="MarkAs" class="control-label"></label>
                            <select asp-for="MarkAs" class="form-control" asp-items="Html.GetEnumSelectList<MarkAs>()"></select>
                            <span asp-validation-for="MarkAs" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Keywords" class="control-label"></label>
                            <textarea asp-for="Keywords" class="form-control" type="text" placeholder="Include some keyword related to questions (comma seperated)"></textarea>
                            <span asp-validation-for="Keywords" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" type="text" placeholder="Some detail about question"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" value="Create" class="btn btn-success float-right"><i class="fas fa-floppy-disk"></i> Create </button>
                            <a asp-controller="Question" asp-action="Details" asp-route-id="@Model.QuestionId" class="btn btn-secondary"> <i class="fas fa-arrow-back"></i> Cancel</a>
                        </div>
                    </form>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>


