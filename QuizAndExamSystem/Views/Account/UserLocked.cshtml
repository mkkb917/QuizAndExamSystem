@{
    ViewData["Title"] = "Account Locked";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">@ViewData["Title"]</div>
                <div class="card-body">
                    <p>
                        Your account has been locked due to too many failed login attempts.
                        Please try again later or contact support if you need immediate assistance.
                    </p>
                    <p>
                        <a href="@Url.Action("Index", "Home")">Return to Home Page</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
