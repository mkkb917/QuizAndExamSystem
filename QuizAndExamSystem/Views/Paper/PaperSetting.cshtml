@model ExamSystem.Models.PaperSetting

@{
    ViewData["Title"] = "Paper Setting";
    Layout = "_DashboardLayout";
    //int sno = 0;
}



<div class="container">
    <h2 style="text-align:center; color:forestgreen;">Paper Setting</h2>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <!-- /.card-header -->
            <div class="card-body table-responsive">
                <p class="form-control"> <span class="badge badge-danger">Note:</span> First Complete Your Profile and School Profile for successfully generating paper</p>
                <a asp-controller="Paper" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-success float-right"><i class="fas fa-pencil"></i> Edit</a>
                <hr style="background-color: white; height: 1px; border: 0;" />
                <!-- Paper setting section-->
                <div id="meta" class="table  table-hover">
                    <div class="row d-flex justify-content-center">
                        <h3>Details of Examination </h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label asp-for=" ExamName" class="control-label"></label>
                            <label class="form-control">@Html.DisplayFor(Model=>Model.ExamName)</label>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label asp-for=" Duration" class="control-label"></label>
                            <label class="form-control">@Html.DisplayFor(Model=>Model.Duration)</label>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label asp-for=" Medium" class="control-label"></label>
                            <label class="form-control">@Html.DisplayFor(Model=>Model.Medium)</label>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label asp-for=" DifficultyLevel" class="control-label"></label>
                            <label class="form-control">@Html.DisplayFor(Model=>Model.DifficultyLevel) </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label class="contol-label">Paper Versions</label>
                            <div class=" form-check">
                                <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input" value="" disabled>4 versions
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label class="contol-label">Secure paper with</label>
                            <div class=" form-check">
                                <label class="form-check-label">
                                    <input  type="checkbox" class="form-check-input" check="@(Model.QrCode!=null?"checked":"")" disabled>Barcode
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12 col-12">
                            <label class="contol-label">Marks distribution for the paper</label>
                            <div class=" form-check">
                                <label class="form-check-label">
                                    @if (Model.PairingScheme == true)
                                    {
                                        <input id="pairingCheckBox" type="checkbox" class="form-check-input" checked disabled>
                                    }
                                    else
                                    {
                                        <input id="pairingCheckBox" type="checkbox" class="form-check-input"  disabled>
                                    }
                                    Use Default Pairing scheme
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <hr style="background-color: white; height: 1px; border: 0;" />
                <!-- Marks Assignments and Setting section-->
                <div id="marksDistribution" style="display: @(Model.PairingScheme == false ? "block" : "none")" class="table  table-hover" style="display: block;">
                    <div class="row d-flex justify-content-center">
                        <h3 class="h3">Questions and Marks Distribution </h3>
                    </div>
                    <div class="row">
                        <div class="col-lg-10 col-md-10 col-sm-12 col-12">
                            <div class="row">
                                <div class="col col-6 border">
                                    <label class="text-center d-lg-flex justify-content-lg-center">Multiple Choice Questions</label>
                                    <div class="input-group mb-2">
                                        <span class="input-group-addon">Question:</span>&nbsp;
                                        <input asp-for="MCQsCount" class="form-control" disabled>&nbsp;&nbsp;
                                        <span asp-validation-for=" MCQsCount" class="text-danger"></span>
                                        <span class="input-group-addon">Marks: </span>&nbsp;
                                        <input asp-for="MCQsMarks" class="form-control" disabled>
                                        <span asp-validation-for=" MCQsMarks" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col col-6 border">
                                    <label class="text-center d-lg-flex justify-content-lg-center">Short Exam Questions</label>
                                    <div class="input-group mb-2">
                                        <span class="input-group-addon">Question: </span>&nbsp;
                                        <input asp-for="SEQsCount" class="form-control" disabled>&nbsp;&nbsp;
                                        <span asp-validation-for=" SEQsCount" class="text-danger"></span>
                                        <span class="input-group-addon">Marks: </span>&nbsp;
                                        <input asp-for="SEQsMarks" class="form-control" disabled>
                                        <span asp-validation-for=" SEQsMarks" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col col-6 border">
                                    <label class="text-center d-lg-flex justify-content-lg-center">Long Questions</label>
                                    <div class="input-group mb-2">
                                        <span class="input-group-addon mb-2">Question: </span>&nbsp;
                                        <input asp-for="LongQsCount" class="form-control" disabled>&nbsp;&nbsp;
                                        <span asp-validation-for=" LongQsCount" class="text-danger"></span>
                                        <span class="input-group-addon mb-2">Marks: </span>&nbsp;
                                        <input asp-for="LongQsMarks" class="form-control" disabled>
                                        <span asp-validation-for=" LongQsMarks" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col col-6 border">
                                    <label class="text-center  d-lg-flex justify-content-lg-center">Fill in the Blank Questions</label>
                                    <div class="input-group mb-2">
                                        <span class="input-group-addon">Question: </span>&nbsp;
                                        <input asp-for="FillInBlanksCount" class="form-control" disabled>&nbsp;&nbsp;
                                        <span asp-validation-for=" FillInBlanksCount" class="text-danger"></span>
                                        <span class="input-group-addon">Marks: </span>&nbsp;
                                        <input asp-for="FillInBlanksMarks" class="form-control" disabled>
                                        <span asp-validation-for=" FillInBlanksMarks" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-12 col-12">
                            <div class="row">
                                <div class="col border mb-2">
                                    <label asp-for="TotalMarks" class="control-label"></label>
                                    <input asp-for="TotalMarks" class="form-control mb-1" disabled>
                                    <label asp-for="PassingMarks" class="control-label"></label>
                                    <input asp-for="PassingMarks" class="form-control mb-3" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-12 mt-3">
                    <label asp-for=" Instructions" class="control-label"></label>
                    <textarea class="form-control">@Html.DisplayFor(Model=>Model.Instructions) </textarea>
                </div>

            </div>


        </div>

        <div class="col-12">
            <div class="form-group">
                <a asp-controller="Paper" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-success float-right"><i class="fas fa-pencil"></i> Edit</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#summernote').summernote({
                lang: 'es-ES',
                placeholder: 'Enter Exam Instructions .....'
            });


            const pairingCheckBox = document.getElementById('pairingCheckBox');
            const marksDistribution = document.getElementById('marksDistribution');

            pairingCheckBox.addEventListener('change', function () {
                if (pairingCheckBox.checked) {
                    marksDistribution.style.display = 'none';
                } else {
                    marksDistribution.style.display = 'block';
                }
            });
        });
    </script>
    }
