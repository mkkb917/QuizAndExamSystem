@model IEnumerable<ExamSystem.Models.Uploads>


@if (Model != null)
{
    <div class="container">
        <br>
        <div class="row">
            <div class="feature-content">
                <!-- Feature Title -->
                <h2>
                    Decorate your Classrooms with  <a asp-controller="Corner" asp-action="Decorate">Decorate School</a>
                </h2>
                <!-- Feature Description -->
                <p>
                    Decorating schools and classrooms with Panaflex banners can create a vibrant and 
                    engaging learning environment. These banners, featuring colorful murals, educational
                    charts, and student artwork, can transform plain walls into inspiring spaces. Glass 
                    covers can be used to protect these decorations and keep them looking fresh and new.
                    Themed decorations, such as science models of planets and atoms or history timelines,
                    can make learning more fun and help reinforce the curriculum. Comfortable furniture, 
                    good lighting, and organized storage areas also contribute to a positive learning 
                    environment. Remember, a well-decorated classroom can stimulate curiosity, foster 
                    creativity, and make school a place where students love to learn. 😊
                </p>
            </div>
        </div>
        
        <div class="row">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="2000">
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Count(); i += 3)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row">
                                @for (int j = 0; j < 3 && i + j < Model.Count(); j++)
                                {
                                    var item = Model.ElementAt(i + j);
                                    <div class="col-md-4">
                                        <partial name="_IndividualUploadView" model="item" />
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>

}
else
{
    <h4 class="mt-4 mb-5"><strong>No File found</strong></h4>
}

