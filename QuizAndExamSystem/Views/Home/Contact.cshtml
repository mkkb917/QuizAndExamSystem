    ViewData["Title"] = "Contact Us";
}


<!--================================
=            Page Title            =
=================================-->

<section class="section page-title">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 m-auto">
                <!-- Page Title -->
                <h1>@ViewData["Title"]</h1>
                <!-- Page Description -->
                <p>Feel free to contact us on any query or suggestions.</p>
            </div>
        </div>
    </div>
</section>

<!--====  End of Page Title  ====-->
<!--=====================================
=            Address and Map            =
======================================-->
<section class="address">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 align-self-center">
                <div class="block">
                    <div class="address-block text-center mb-5">
                        <div class="icon">
                            <i class="ti-mobile"></i>
                        </div>
                        <div class="details">
                            <h3>0092 0336 560 1506</h3>
                            <h3>info@opegs.com</h3>
                        </div>
                    </div>
                    <div class="address-block text-center">
                        <div class="icon">
                            <i class="ti-map-alt"></i>
                        </div>
                        <div class="details">
                            <h3>Office# 02, third floor, </h3>
                            <h3>Aalam fabrix plaza, Fawara chowk</h3>
                            <h3>Attock, Punjab, Pakistan</h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 mt-5 mt-lg-0">
                <div class="google-map">
                    <!-- Google Map -->
                    <div id="myDiv" style="width:100%;height:400px;"></div>
                    @*<div id="map_canvas" data-latitude="51.507351" data-longitude="-0.127758"></div>*@
