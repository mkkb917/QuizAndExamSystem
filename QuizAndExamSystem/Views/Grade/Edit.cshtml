@model ExamSystem.Models.Grade

@{
    ViewData["Title"] = "Edit a Class";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
@{
    if (TempData != null)
    {
        <div class="label text-danger">
            @TempData["error"]
        </div>
    }
}
<div class="container">
    <h2 style="text-align:center; color:red;">Modify Class</h2>
</div>

<div class="card">
    @*<div class="card-header"></div>*@
    <!-- /.card-header -->
    <div class="card-body table-responsive">
        <form asp-controller="Grade" asp-action="Edit">
            <div>
                <input type="submit" value="Update" class="btn btn-success float-right" />
                <a asp-action="index" class="btn btn-secondary"> <i class="fa fa-arrow-left"></i> Back</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeText" class="control-label"></label>
                <input asp-for="GradeText" class="form-control" />
                <span asp-validation-for="GradeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @{
                    if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                    }
                    else
                    {
                        <input asp-for="Status" value="1" type="number" class="form-control" disabled="disabled" />
                    }
                }
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success float-right" />
                <a class="btn btn-secondary" asp-action="Index"> <i class="fa fa-arrow-left"></i> Back </a>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
</div>

